{
  "name": "greg-cal",
  "version": "1.0.3",
  "repository": "git@github.com:traveloka/greg-cal.git",
  "main": "dist/index.js",
  "umd:main": "dist/greg-cal.umd.production.js",
  "module": "dist/greg-cal.esm.production.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "NODE_ICU_DATA=node_modules/full-icu tsdx test --env=jsdom",
    "prepare-release": "standard-version -a",
    "checksize": "bundlesize"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@types/jest": "^24",
    "bundlesize": "^0.18",
    "full-icu": "^1.3.0",
    "husky": "^3",
    "prettier": "^1",
    "pretty-quick": "^1",
    "standard-version": "^8.0.1",
    "tsdx": "^0.12.3",
    "tslib": "^1",
    "typescript": "^3"
  },
  "bundlesize": [
    {
      "path": "./dist/greg-cal.cjs.production.min.js",
      "maxSize": "2 kB"
    }
  ],
  "jest": {
    "transform": {
      ".(js|ts|tsx)": "ts-jest/dist"
    },
    "testMatch": [
      "<rootDir>/**/*.(spec|test).{js,ts,tsx}"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx}"
    ]
  }
}
